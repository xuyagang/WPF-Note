<UserControl x:Class="极客学院_CollectionControls.StatusBarUserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:极客学院_CollectionControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <DockPanel>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock>当前字数：</TextBlock>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock Name="tblCount"></TextBlock>
                </StatusBarItem>
                <!--添加分割-->
                <Separator></Separator>
                <!--后续内容-->
                <StatusBarItem>
                    <TextBlock>页面：</TextBlock>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock>1/4</TextBlock>
                </StatusBarItem>
            </StatusBar>
            <TextBox TextChanged="TextBox_TextChanged"></TextBox>
        </DockPanel>
    </Grid>
</UserControl>
